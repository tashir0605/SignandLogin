<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient3"
    android:orientation="vertical"

    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="0dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/app_name"

            android:layout_width="411dp"
            android:layout_height="100dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/gradient5"
            android:gravity="center"
            android:paddingTop="0dp"

            android:text="Enigma"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="372dp"
        android:layout_height="178dp"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo"
            android:layout_width="165dp"
            android:layout_height="134dp"
            android:src="@drawable/logo"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/username_edit_text"
        android:layout_width="363dp"
        android:layout_marginLeft="16dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_textview_border"

        android:drawableLeft="@drawable/ic_account_circle"
        android:drawablePadding="8dp"
        android:hint="Name"
        android:padding="12dp"
        android:paddingEnd="16dp"

        android:textSize="23dp"
        android:textStyle="bold" />



    <LinearLayout
        android:layout_width="372dp"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"

            android:backgroundTint="#BE102FD8"
            android:text="Save"
            android:textColor="#FFFFFF"

            android:textSize="20dp" />

        <Button
            android:id="@+id/next"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"

            android:backgroundTint="#BE102FD8"
            android:drawableRight="@drawable/arrow_next"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>
